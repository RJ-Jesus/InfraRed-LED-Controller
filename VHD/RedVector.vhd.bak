library IEEE;
use IEEE.std_logic_1164.all;
use IEEE.numeric_std.all;

entity RedVector is
  port(brightnesslevels : in std_logic_vector(3 downto 0);
       redvector        : out std_logic_vector(17 downto 0));
end RedVector;

architecture Behav of RedVector is
begin
  redvector <= "000000000000000011" when (brightnesslevels = "0001") else --01
               "000000000000001111" when (brightnesslevels = "0010") else --02
               "000000000000111111" when (brightnesslevels = "0011") else --03
               "000000000001111111" when (brightnesslevels = "0100") else --04
               "000000000011111111" when (brightnesslevels = "0101") else --05
               "000000000111111111" when (brightnesslevels = "0110") else --06
               "000000001111111111" when (brightnesslevels = "0111") else --07
               "000000011111111111" when (brightnesslevels = "1000") else --08
               "000000111111111111" when (brightnesslevels = "1001") else --09
               "000001111111111111" when (brightnesslevels = "1010") else --10
               "000011111111111111" when (brightnesslevels = "1011") else --11
               "000111111111111111" when (brightnesslevels = "1100") else --12
               "001111111111111111" when (brightnesslevels = "1101") else --13
               "011111111111111111" when (brightnesslevels = "1110") else --14
               "111111111111111111" when (brightnesslevels = "1111") else --15
               "000000000000000000";
end Behavioral;
        